{
  "name": "backend",
  "version": "0.1.0",
  "description": "Example Reason Esy Project",
  "license": "MIT",
  "esy": {
    "build": "dune build -p #{self.name}",
    "buildDev": "refmterr dune build --promote-install-files --root . --only-package #{self.name}",
    "NOTE": "Optional release Section. Customizes result of `esy release`",
    "release": {
      "bin": [
        "Hello"
      ]
    },
    "buildEnv": {
      "ODOC_SYNTAX": "re"
    }
  },
  "scripts": {
    "test": "esy x Server",
    "doc": "esy dune build @doc",
    "setup:database": "psql -U pawelfalisz -d pawelfalisz -f init.sql",
    "clean:database": "psql -U pawelfalisz -d pawelfalisz -f clean.sql",
    "restart:database": "psql -U pawelfalisz -d pawelfalisz -f clean.sql && psql -U pawelfalisz -d pawelfalisz -f init.sql"
  },
  "dependencies": {
    "@esy-ocaml/reason": "*",
    "@opam/core": "*",
    "@opam/dune": "*",
    "@opam/fmt": "*",
    "@opam/jose": "0.5.1",
    "@opam/logs": "*",
    "@opam/pgx_lwt_unix": "1.0",
    "@opam/uri": "*",
    "@reason-native-web/morph": "^0.6.1",
    "@reason-native-web/morph_graphql_server": "^0.6.1",
    "@reason-native/console": "*",
    "@reason-native/pastel": "*",
    "ocaml": "~4.10.0"
  },
  
  "devDependencies": {
    "@opam/merlin": "*",
    "@opam/odoc": "*",
    "@opam/ocaml-lsp-server": "ocaml/ocaml-lsp:ocaml-lsp-server.opam",
    "@reason-native/rely": "*",
    "ocaml": "~4.10.0",
    "refmterr": "*"
  },
  "resolutions": {
    "@opam/httpaf-lwt-unix": "anmonteiro/httpaf:httpaf-lwt-unix.opam#76b461bed081c64908fb1fdfa076ab2c936ca622",
    "@opam/httpaf-lwt": "anmonteiro/httpaf:httpaf-lwt.opam#76b461bed081c64908fb1fdfa076ab2c936ca622",
    "@opam/httpaf": "anmonteiro/httpaf:httpaf.opam#76b461bed081c64908fb1fdfa076ab2c936ca622",
    "@opam/opium_core": "rgrinberg/opium:opium_core.opam#287b83f85bcf6c75d503b1edab77c7ec524f9090",
    "@opam/checkseum": {
      "source": "mirage/checkseum:checkseum.opam#14b524e255cc38583c7749924b848b4215343641",
      "override": {
        "dependencies": {
          "@opam/ocamlfind": "*"
        }
      }
    }
  }
}
